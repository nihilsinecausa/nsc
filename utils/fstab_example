#----------------------------------------------------------------
# TMPFS
#----------------------------------------------------------------
tmpfs /tmp tmpfs size=7799M,noatime,lazytime,nodev,nosuid,mode=1777
tmpfs /var/log tmpfs size=50M,noatime,lazytime,nodev,nosuid
tmpfs    /mnt/nscram0    tmpfs    defaults,size=2048M    0    0
tmpfs    /mnt/nscram1    tmpfs    defaults,size=2048M    0    0

